boot_splash/bg_color=Color(0.109804, 0.105882, 0.168627, 1)
config/icon="res://Sprites/Icons/artificial-intelligence (2).png"

[rendering]

renderer/rendering_method="gl_compatibility"
renderer/rendering_method.mobile="gl_compatibility"
